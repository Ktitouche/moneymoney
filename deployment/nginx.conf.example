# Example Nginx config for VPS (Ubuntu)
# - Serves React build as static site
# - Proxies API and uploads to Node backend on port 5000

server {
    listen 80;
    server_name your-domain.com www.your-domain.com;  # change to your domain

    # Serve frontend static build
    root /var/www/moneymoney/frontend/build;
    index index.html;

    # Gzip for text assets
    gzip on;
    gzip_types text/plain text/css application/json application/javascript application/x-javascript text/xml application/xml application/xml+rss text/javascript image/svg+xml;

    # React SPA routing
    location / {
        try_files $uri /index.html;
    }

    # Proxy API to Node backend
    location /api/ {
        proxy_pass http://127.0.0.1:5000/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Proxy uploads (served by Express static /uploads)
    location /uploads/ {
        proxy_pass http://127.0.0.1:5000/uploads/;
        proxy_set_header Host $host;
    }

    # Optional: basic security headers
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options SAMEORIGIN;
    add_header X-XSS-Protection "1; mode=block";
}
